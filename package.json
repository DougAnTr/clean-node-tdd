{
  "name": "clean-node-tdd",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:DougAnTr/clean-node-tdd.git",
  "author": "Douglas Trofino <douglas.trofino@outlook.com>",
  "license": "MIT",
  "scripts": {
    "dev": "rm -rf dist && tsc -w & nodemon -q -w dist dist/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "test": "jest --watchAll",
    "test:staged": "jest --passWithNoTests"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn format",
      "git add .",
      "yarn test:staged"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.7"
  }
}
